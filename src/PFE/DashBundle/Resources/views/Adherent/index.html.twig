{% extends "PFEDashBundle::layout.html.twig" %}

{% block title %}
  CRUD - {{ parent() }}
{% endblock %}

{% block body -%}
<div class="row card-panel wtitle top-grey col offset-s1 s10 crudcard">
  <h5 class="card-title">Adherent list</h5>
    <table class="records_list bordered hoverable">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Date naissance</th>
                <th>Age</th>
                <th>Sexe</th>
                <th>Date inscription</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.nom|upper }}</td>
                <td>{{ entity.prenom|title }}</td>
                <td>{% if entity.dateNaissance %}{{ entity.dateNaissance|date('Y-m-d') }}{% endif %}</td>
                <td>{{ entity.age }}</td>
                <td>{% if entity.sexe %}<span class="badge new green">Homme</span> {% else %} <span class="badge new pink">Femme</span> {% endif %} </td>
                <td>{% if entity.dateInscription %}{{ entity.dateInscription|date('Y-m-d') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('adherent_edit', { 'id': entity.id }) }}" class="btn-flat waves-effect waves-teal"><i class="mdi-editor-mode-edit"></i></a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
    <a href="{{ path('adherent_new') }}" class="btn">
        <i class="mdi-content-add left"></i> Cr√©er nouveau
    </a>
</div>
{% endblock %}
