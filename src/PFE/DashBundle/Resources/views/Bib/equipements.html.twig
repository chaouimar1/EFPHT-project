{% extends "PFEDashBundle::layout.html.twig" %}

{% block title %}PFEDashBundle:Bib:equipements{% endblock %}

{% block body %}
    <div class="row">
        <div class="card wtitle col s11 cols2">
            <h3 class="card-title bigtitle blue-grey">Equipement Total - </h3>
            <div class="card-content">
                {% if equipements %}
                    <table class="bordered hoverable">
                        <tr>
                            <th></th>
                            <th>Disponibilité</th>
                            <th>Nombre / endom / non util</th>
                        </tr>
                        {% for e in equipements %}
                            <tr>
                                <td>{{ e.typeequipement.nom }}</td>
                                <td>{% if e.isDisponible %}
                                        <span class="badge green new">Disponible</span>
                                    {% else %}
                                        <span class="badge red new">Non Disponible</span>
                                    {% endif %} </td>
                                <td>{{ e.nombre }} / {{ e.nombre_endommage }} / {{ e.nombre_nutilisable }}</td>
                            </tr>
                        {% endfor %}
                    </table>
                {% else %}
                    no equipements nigga
                {% endif %}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="card wtitle col s11 cols2">
            <h3 class="card-title bigtitle blue-grey">Rayonnage Total - </h3>
            <div class="card-content">
                {% if rayonnages %}
                    <table class="bordered hoverable">
                        <tr>
                            <th></th>
                            <th>Disponibilité</th>
                            <th>Nombre / endom / non util</th>
                        </tr>
                        {% for e in rayonnages %}
                            <tr>
                                <td>{{ e.typeequipement.nom }}</td>
                                <td>{% if e.isDisponible %}
                                        <span class="badge green new">Disponible</span>
                                    {% else %}
                                        <span class="badge red new">Non Disponible</span>
                                    {% endif %} </td>
                                <td>{{ e.nombre }} / {{ e.nombre_endommage }} / {{ e.nombre_nutilisable }}</td>
                            </tr>
                        {% endfor %}
                    </table>
                {% else %}
                    no equipements nigga
                {% endif %}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="card wtitle col s4 cols2">
            <h3 class="card-title bigtitle blue-grey darken-1">equipement 1</h3>
            <div class="card-content">
                <script type="text/javascript">
                    {{ chart(chart1) }}
                </script>

                <div id="piechart1"></div>
            </div>
        </div>
        <div class="card wtitle col s7">
            <h3 class="card-title bigtitle blue-grey">equipement count with categories</h3>
            <div class="card-content">
                <script type="text/javascript">
                        {#{{ chart(columnchart1) }}#}
                </script>

                <div id="piechart2" style="min-width: 400px; height: 400px; margin: 0 auto"></div>
            </div>
        </div>
    </div>
{% endblock %}
