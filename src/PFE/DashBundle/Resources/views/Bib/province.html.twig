{% extends "PFEDashBundle::layout.html.twig" %}

{% block title %}PFEDashBundle:Bib:presentation{% endblock %}

{% block body %}

    {% for b in p.bibliotheque %}
        <div class="card wtitle justbg col s5 {%  if loop.index is not odd %}offset-s1 {% endif %}">
            <h3 class="card-title bigtitle blue-grey darken-4">{{ b.nom }}</h3>

            <div class="card-content">
                <span class="card-title black-text noborder"><u>Infos générales</u></span>
                <p><i class="mdi-action-schedule blue-grey-text text-darken-2"></i> <span class="blue-grey-text">Date création : </span>{{ b.dateCreation|date("d/m/Y")  }}</p>
                <p><i class="mdi-image-assistant-photo blue-grey-text text-darken-2"></i> <span class="blue-grey-text">Adresse : </span>{{ b.adresse }}</p>
                <p><i class="mdi-action-perm-phone-msg blue-grey-text text-darken-2"></i> <span class="blue-grey-text">Téléphone/Fax : </span>{{ b.tel }} / {{ b.fax }}</p>
                <p><i class="mdi-communication-email blue-grey-text text-darken-2"></i> <span class="blue-grey-text">E-mail : </span>{{ b.email }}</p>
                <p><i class="mdi-action-account-balance blue-grey-text text-darken-2"></i> <span class="blue-grey-text">Tutelle(s) : </span>...</p>
                <p><i class="mdi-action-event blue-grey-text text-darken-2"></i> <span class="blue-grey-text">Date installation internet : </span>{{ b.dateInstallationInternet|date("d/m/Y")  }}</p>
            </div>
            <div class="card-action">
            <a class="right-align" href="{{  path('pfe_dash_bib_presentation',{'id':b.id}) }}">Plus de détails</a>
            </div>
        </div>
    {% else %}
        <div class="card wtitle col s10 offset-s1">
            <h3 class="card-title bigtitle red"> !! </h3>
            <div class="card-content">
                pas de bibbliotheque dans cette province !
            </div>
        </div>
    {% endfor %}
{% endblock %}