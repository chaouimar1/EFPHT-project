{% extends "PFEDashBundle::layout.html.twig" %}

{% block title %}
    CRUD - {{ parent() }}
{% endblock %}

{% block body -%}
<div class="row card-panel wtitle top-grey col offset-s1 s10 crudcard">
    <h5 class="card-title">Animation list</h5>
    <table class="records_list bordered hoverable">
        <thead>
            <tr>
                <th>Created</th>
                <th>Occamenheb</th>
                <th>Publicvise</th>
                <th>Dateexposition</th>
                <th>Publictotal</th>
                <th>Dateanimation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{% if entity.created %}{{ entity.created|date('Y-m-d') }}{% endif %}</td>
                <td>{% if entity.occamenheb==1 %} Hebdomadaire {% elseif entity.occamenheb==2 %} Mensuel {% elseif entity.occamenheb==3 %} Occasionnel {% endif %}</td>
                <td>{{ entity.publicvise }}</td>
                <td>{% if entity.dateExposition %}{{ entity.dateExposition|date('Y-m-d') }}{% endif %}</td>
                <td>{{ entity.publicTotal }}</td>
                <td>{% if entity.dateanimation %}{{ entity.dateanimation|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <a href="{{ path('animation_edit', { 'id': entity.id }) }}" class="btn-flat waves-effect waves-teal">
                        <i class="mdi-editor-mode-edit"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
    <a href="{{ path('animation_new') }}" class="btn blue-grey">
        <i class="mdi-content-add left"></i> Cr√©er nouveau</a>
</div>
    {% endblock %}
