{% extends "PFEDashBundle::layout.html.twig" %}

{% block body -%}
    <h1>Bibliotheque list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Datecreation</th>
                <th>Superficie</th>
                <th>Adresse</th>
                <th>Tel</th>
                <th>Fax</th>
                <th>Email</th>
                <th>Dateinstallationinternet</th>
                <th>Isformation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('bibliotheque_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom }}</td>
                <td>{% if entity.dateCreation %}{{ entity.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.superficie }}</td>
                <td>{{ entity.adresse }}</td>
                <td>{{ entity.tel }}</td>
                <td>{{ entity.fax }}</td>
                <td>{{ entity.email }}</td>
                <td>{% if entity.dateInstallationInternet %}{{ entity.dateInstallationInternet|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.isFormation }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('bibliotheque_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('bibliotheque_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('bibliotheque_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
